# Environment
ENVIRONMENT=development
DEBUG=true

# API
API_KEY=dev-secret-key

# Database (same as Rails for reading photos)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/picaivid_development

# AWS S3 (MinIO for local dev)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=picaivid-dev
S3_ENDPOINT=http://localhost:9000

# AWS SQS (LocalStack for local dev)
SQS_ENDPOINT=http://localhost:4566
SQS_QUEUE_URL=http://sqs.us-east-1.localhost.localstack.cloud:4566/000000000000/picaivid-jobs
SQS_ACCESS_KEY_ID=localstack
SQS_SECRET_ACCESS_KEY=localstack

# Worker Type (cpu or gpu)
WORKER_TYPE=cpu

# ML Models
MODEL_CACHE_DIR=./ml_models
OPENCLIP_MODEL=ViT-B-32
OPENCLIP_PRETRAINED=openai

# Logging
LOG_LEVEL=INFO
